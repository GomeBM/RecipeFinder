<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/blue_app_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipe Title"
        android:gravity="center"
        android:id="@+id/dialogRecipeTitle"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/blue_button_background"/>

    <ImageView
        android:id="@+id/randomRecipeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usedIngredientsCardView"
            app:cardCornerRadius="8dp"
            android:layout_weight=".4">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialogUsedIngredients"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:text="123123123123123123123123123"/>
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/missedIngredientsCardView"
            app:cardCornerRadius="8dp"
            android:layout_weight=".5">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialogMissedIngredients"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:text="123123123123123123123123123"/>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/dialogInstructions"
            android:textSize="15sp"
            android:text="sample text"
            android:layout_margin="10dp"
            android:background="@color/white"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close"
            android:id="@+id/dialogCloseButton"
            android:background="@drawable/blue_button_background"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mail"
            android:id="@+id/dialogSendEmailButton"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/blue_button_background"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LIKE"
            android:id="@+id/dialogFavouriteButton"
            android:background="@drawable/blue_button_background"/>

    </LinearLayout>




</LinearLayout>